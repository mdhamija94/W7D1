<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <% if logged_in? %>
    <h3> Howdy there, <%= current_user.user_name %>! </h3> 
  <% end %>
    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <p style="color: red"> <%= error %> </p>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
